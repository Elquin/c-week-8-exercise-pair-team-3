@model AlienWeightModel

@{
    ViewData["Title"] = "Alien Weight Result";
    string planetImg = ($"/images/{Model.Planet.ToLower()}.jpg");
}


<section id="calculatorResult" class="centeredPanel">
    <span class="planets" ><img src="@planetImg" alt="@Model.Planet" /> 
    <p>If you are @Model.EarthWeight lbs on planet Earth, you would weigh @Model.AlienWeight lbs on @Model.Planet</p></span>



</section>