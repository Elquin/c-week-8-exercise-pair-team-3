@model RegistrationViewModel
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

<form method="post">

    <div asp-validation-summary="All" class="error"></div>

    <table>
        <tr>
            <td><label asp-for="FirstName">First Name:</label></td>
            <td><input asp-for="FirstName" /><span asp-validation-for="FirstName" class="error"></span></td>
        </tr>
        <tr>
            <td><label asp-for="LastName">Last Name:</label></td>
            <td><input asp-for="LastName" /><span asp-validation-for="LastName" class="error"></span></td></td>
        </tr>
        <tr>
            <td><label asp-for="Email">Email:</label></td>
            <td><input asp-for="Email" /><span asp-validation-for="Email" class="error"></span></td></td>
        </tr>
        <tr>
            <td><label asp-for="ConfirmEmail">Confirm Email:</label></td>
            <td><input asp-for="ConfirmEmail" /><span asp-validation-for="ConfirmEmail" class="error"></span></td></td>
        </tr>
        <tr>
            <td><label asp-for="Password">Password:</label></td>
            <td><input type="password" asp-for="Password" /><span asp-validation-for="Password" class="error"></span></td></td>
        </tr>
        <tr>
            <td><label asp-for="ConfirmPassword">Confirm Password:</label></td>
            <td><input type="password" asp-for="ConfirmPassword" /><span asp-validation-for="ConfirmPassword" class="error"></span></td></td>
        </tr>
        <tr>
            <td><label asp-for="BirthDate">Birthday:</label></td>
            <td><input asp-for="BirthDate" /><span asp-validation-for="BirthDate" class="error"></span></td></td>
        </tr>
        <tr>
            <td><label asp-for="NumberOfTickets"># of Tickets:</label></td>
            <td><input asp-for="NumberOfTickets" /><span asp-validation-for="NumberOfTickets" class="error"></span></td></td>
        </tr>
        <td></td>
        <td><input type="submit" value="Submit" /></td>
        </tr>
    </table>

</form>